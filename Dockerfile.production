# ByNoemie RAG Chatbot - Production Dockerfile
# Supports both Streamlit UI and FastAPI modes

# =============================================================================
# Stage 1: Builder
# =============================================================================
FROM python:3.11-slim as builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir uvicorn[standard] gunicorn

# =============================================================================
# Stage 2: Production Runtime
# =============================================================================
FROM python:3.11-slim as production

WORKDIR /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && useradd --create-home --shell /bin/bash appuser

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application code
COPY config/ ./config/
COPY src/ ./src/
COPY data/ ./data/
COPY app.py ./
COPY api.py ./
COPY main.py ./
COPY setup.py ./

# Create data directories
RUN mkdir -p data/cache data/outputs data/embeddings data/products data/stock data/feedback data/policies \
    && chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PORT=8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Expose port
EXPOSE 8000 8501

# Default: API mode
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8000"]

# =============================================================================
# Stage 3: Streamlit UI
# =============================================================================
FROM production as streamlit

# Streamlit specific config
ENV STREAMLIT_SERVER_PORT=8501 \
    STREAMLIT_SERVER_ADDRESS=0.0.0.0 \
    STREAMLIT_SERVER_HEADLESS=true \
    STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Health check for Streamlit
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

EXPOSE 8501

CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]

# =============================================================================
# Usage:
# =============================================================================
# Build API image:
#   docker build -t bynoemie-api .
#
# Build Streamlit image:
#   docker build --target streamlit -t bynoemie-ui .
#
# Run API:
#   docker run -d -p 8000:8000 -e OPENAI_API_KEY=$OPENAI_API_KEY bynoemie-api
#
# Run Streamlit:
#   docker run -d -p 8501:8501 -e OPENAI_API_KEY=$OPENAI_API_KEY bynoemie-ui
# =============================================================================
