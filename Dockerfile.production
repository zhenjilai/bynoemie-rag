# ByNoemie RAG Chatbot - Production Dockerfile
# Fixed for flat project structure

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for better caching)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Create directory structure
RUN mkdir -p src static data/products data/stock data/orders data/embeddings data/policies data/cache

# Copy all source files explicitly (no wildcards for optional files)
# Copy Python files (required)
COPY *.py ./

# Copy JSON files (required for data)
COPY *.json ./

# Copy HTML file
COPY index.html ./
COPY index.html static/

# Setup src/ directory for imports (api.py imports from src.agents)
RUN for f in agents.py orders.py policy_rag.py database.py data_manager.py \
    cache.py logger.py utils.py base.py openai_client.py groq_client.py \
    templates.py rules.py workflow.py chainer.py error_handler.py \
    rate_limiter.py token_counter.py few_shot.py data_processor.py scraper.py; do \
    if [ -f "$f" ]; then cp "$f" src/; fi; \
    done && \
    touch src/__init__.py

# Setup data directories with JSON files
RUN if [ -f "bynoemie_products.json" ]; then cp bynoemie_products.json data/products/; fi && \
    if [ -f "stock_inventory.json" ]; then cp stock_inventory.json data/stock/; fi && \
    if [ -f "sample_orders.json" ]; then cp sample_orders.json data/orders/; fi && \
    if [ -f "policies.json" ]; then cp policies.json data/policies/; fi

# Debug: Show what was copied
RUN echo "=== Files in /app ===" && ls -la && \
    echo "=== Files in /app/src ===" && ls -la src/ && \
    echo "=== Files in /app/static ===" && ls -la static/

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PORT=8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Expose port
EXPOSE ${PORT}

# Run the API
CMD ["sh", "-c", "uvicorn api:app --host 0.0.0.0 --port ${PORT}"]